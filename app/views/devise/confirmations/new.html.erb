<h2>Resend confirmation instructions</h2>

<%= semantic_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.inputs do %>
    <%= f.input :email, autofocus: true, required: true %>
    <%= f.actions { f.action :submit, label: 'Resend confirmation instructions' } %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
