<%= semantic_form_for @customer do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :email %><br>
    <%= f.input :phone %><br>
    <%= f.input :address %><br>
    <%= f.input :country %><br>
    <%= f.input :postcode %><br>
    <%= f.input :currency, as: :select, collection: Configuration::CURRENCY_OPTIONS, selected: 'AUD',
          label: 'Preferred currency' %>
    <%= f.actions %>
  <% end %>
<% end %>
