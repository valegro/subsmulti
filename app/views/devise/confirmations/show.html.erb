<h2>You're almost done! Now create a password to securely access your account.</h2>

<%= semantic_form_for(resource, as: resource_name, url: users_confirmation_path) do |f| %>
  <%= f.inputs do %>
    <%= f.hidden_field :confirmation_token, value: @original_token %>
    <%= f.input :password, label: 'New password', required: true, autofocus: true, autocomplete: 'off' %>
    <%= f.input :password_confirmation, label: 'Confirm new password', required: true, autocomplete: 'off' %>
    <%= f.actions { f.action :submit, label: 'Confirm account' } %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
