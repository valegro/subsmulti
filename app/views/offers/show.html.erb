<p id="notice"><%= notice %></p>

<h3><%= @offer.name %></h3>

<% if @offer.expires then %>
	<div><strong>Expires:</strong> <%= @offer.expires %></div>
<% end %>

<div>
  <strong>Description:</strong>
  <%= @offer.description.html_safe %>
</div>

<% if @offer.publications.present? then %>
	<div>
	<% @offer.publications.each do |publication| %>
	<figure>
		<%= link_to (image_tag publication.image.url(:thumb)), publication %>
		<figcaption><%= link_to publication.name, publication %></figcaption>
	</figure>
	<% end %>
	</div>
<% end %>

<% if @offer.products.present? then %>
	<div>
	<% @offer.products.each do |product| %>
	<figure>
		<%= link_to (image_tag product.image.url(:thumb)), product %>
		<figcaption><%= link_to product.name, product %></figcaption>
	</figure>
	<% end %>
	</div>
<% end %>

<div><%= link_to 'Offers', offers_path %></div>
