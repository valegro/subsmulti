<h2>Change your password</h2>

<%= semantic_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.inputs do %>
    <%= f.hidden_field :reset_password_token %>
    <%= f.input :password, label: 'New password', required: true, autofocus: true, autocomplete: 'off' %>
    <%= f.input :password_confirmation, label: 'Confirm new password', required: true, autocomplete: 'off' %>
    <%= f.actions { f.action :submit, label: 'Change my password' } %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
